
<div class="container">
  <%= simple_form_for(@allocation) do |f| %>

    <% if @allocation.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @allocation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <% %w(BTC ETH XRP EOS BitcoinCash LTC ETHclassic ZCash Monero).each do |currency| %>
        <%= f.label "#{currency} ", class: "input-control col-sm-3 col-form-label" %>
        <input type="number", name="crypto[<%= currency %>]", class= "form-control">
      <% end %>
      <%= f.submit "Submit Allocations", class: "btn btn-primary mt-3" %>
    </div>

  <% end %>

</div>
