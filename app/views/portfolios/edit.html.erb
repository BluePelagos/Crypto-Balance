<div class="container">
  <div class="form-header">
    <h2 class="text-center p-3 mt-5">Edit Portfolio</h2>
  </div>

  <div class="row justify-content-center">
    <div class="d-flex col-lg-6 col-md-8">
      <div class="form-container">

        <%= simple_form_for @portfolio, url: {action:"update"} do |f| %>
        <%= f.input :rebalance_freq, collection: %w(Daily Weekly Biweekly Monthly Quarterly), selected: "Weekly",  prompt: "Choose frequency" %>
        <%= f.date_select :next_rebalance_dt, order: [:day, :month, :year], selected: Date.today + 7 %>
        <%= f.submit "Update" %>
      <% end %>
    </div>
  </div>
</div>
